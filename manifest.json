{
  "manifest_version": 3,
  "name": "Advanced Font Changer",
  "version": "1.0",
  "description": "Take full control of web typography. Customize font family, size, weight, and text direction on any website.",
  "permissions": ["activeTab", "scripting", "storage", "tabs"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["lib/browser-polyfill.min.js", "content.js"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["settings.html", "icons/flags/*.svg"],
      "matches": ["*://*/*"]
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "advanced-font-changer@your-name.com",
      "strict_min_version": "109.0"
    }
  }
}
